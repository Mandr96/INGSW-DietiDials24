<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <Button
        android:id="@+id/menu_modifica_profilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_cambia_account"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_cambia_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/menu_modifica_profilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_modifica_profilo" />

    <Button
        android:id="@+id/menu_notifiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/menu_cambia_account"
        app:layout_constraintStart_toEndOf="@+id/menu_cambia_account"
        app:layout_constraintTop_toTopOf="@+id/menu_cambia_account" />
</androidx.constraintlayout.widget.ConstraintLayout>