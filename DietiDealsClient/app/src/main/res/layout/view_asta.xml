<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/asta_full"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/asta_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/asta_nome"
        android:layout_width="186dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/asta_image"
        app:layout_constraintTop_toTopOf="@+id/asta_image" />

    <TextView
        android:id="@+id/asta_descrizione"
        android:layout_width="186dp"
        android:layout_height="29dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/asta_image"
        app:layout_constraintStart_toStartOf="@+id/asta_nome" />

    <TextView
        android:id="@+id/asta_det1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/asta_nome"
        app:layout_constraintStart_toEndOf="@+id/asta_nome"
        app:layout_constraintTop_toTopOf="@+id/asta_nome" />

    <TextView
        android:id="@+id/asta_det2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/asta_descrizione"
        app:layout_constraintStart_toStartOf="@+id/asta_det1"
        app:layout_constraintTop_toTopOf="@+id/asta_descrizione" />
</androidx.constraintlayout.widget.ConstraintLayout>