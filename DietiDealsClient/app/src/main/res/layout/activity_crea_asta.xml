<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/annulla_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <ImageView
        android:id="@+id/new_articolo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="71dp"
        tools:src="@tools:sample/avatars" />

        <EditText
        android:id="@+id/new_articolo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="212dp" />

        <EditText
        android:id="@+id/new_articolo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Description"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="279dp" />

        <Spinner
        android:id="@+id/new_articolo_cat"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:entries="@array/categories"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="453dp" />

        <Spinner
        android:id="@+id/new_articolo_type"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:entries="@array/aste_types"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="381dp" />

        <TextView
        android:id="@+id/textView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo di asta"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="434dp" />

        <TextView
        android:id="@+id/textView_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="362dp" />

        <TextView
        android:id="@+id/textView_scadenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durata"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="518dp" />

        <EditText
        android:id="@+id/new_articolo_scadenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="537dp" />

        <TextView
        android:id="@+id/textView_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prezzo di partenza"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="621dp" />

        <EditText
        android:id="@+id/new_articolo_minPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="608dp" />

        <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annulla"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="677dp" />

        <Button
        android:id="@+id/crea_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crea"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="675dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>