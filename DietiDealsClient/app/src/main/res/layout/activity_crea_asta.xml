<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/annulla_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="-102dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/appBackgroundColor">

            <ImageView
                android:id="@+id/new_articolo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="141dp"
                tools:layout_editor_absoluteY="71dp"
                tools:src="@tools:sample/avatars" />

            <EditText
                android:id="@+id/new_articolo_name"
                style="@style/midText"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/profile_edit_text"
                android:ems="10"
                android:hint="Articolo"
                android:inputType="text"
                android:padding="5dp"
                tools:layout_editor_absoluteX="23dp"
                tools:layout_editor_absoluteY="227dp" />

            <EditText
                android:id="@+id/new_articolo_description"
                style="@style/midText"
                android:layout_width="364dp"
                android:layout_height="100dp"
                android:background="@drawable/profile_edit_text"
                android:ems="10"
                android:gravity="start"
                android:hint="Descrizione"
                android:inputType="text"
                android:padding="5dp"
                tools:layout_editor_absoluteX="23dp"
                tools:layout_editor_absoluteY="279dp" />

            <Spinner
                android:id="@+id/new_articolo_cat"
                style="@style/midText"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"
                android:entries="@array/categories"
                android:padding="5dp"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="478dp" />

            <TextView
                android:id="@+id/textView_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo di asta"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="459dp" />

            <Spinner
                android:id="@+id/new_articolo_type"
                style="@style/midText"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit_text"
                android:entries="@array/aste_types"
                android:padding="5dp"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="410dp" />

            <TextView
                android:id="@+id/textView_cat"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="391dp" />

            <TextView
                android:id="@+id/textView_scadenza"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durata"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="545dp" />

            <TimePicker
                android:layout_width=""
                android:layout_height=""

            <EditText
                android:id="@+id/new_articolo_minPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="690dp" />

            <TextView
                android:id="@+id/textView_minPrice"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prezzo di partenza"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="670dp" />

            <Button
                android:id="@+id/crea_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crea"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="761dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annulla"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="762dp" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:background="@drawable/profile_edit_text"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="231dp"
                tools:layout_editor_absoluteY="591dp" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:background="@drawable/profile_edit_text"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="588dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="309dp"
                tools:layout_editor_absoluteY="593dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="123dp"
                tools:layout_editor_absoluteY="591dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>